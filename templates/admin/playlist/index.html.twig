{% extends "admin/layout.html.twig" %}
{% block content %}
    <div>
        <h1>Playlist History</h1>
        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>Play ID</th>
                <th>Media ID</th>
                <th>User</th>
                <th>Title</th>
                <th>Channel</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
                {% for row in rows %}
                    <tr data-play-id="{{ row.play_id }}">
                        <td>
                            <button class="btn btn-xs btn-danger btn-delete-play">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </td>
                        <td>{{ row.play_id }}</td>
                        <td>{{ row.media_id }}</td>
                        <td>{{ row.user }}</td>
                        <td>{{ row.title }}</td>
                        <td>{{ row.channel }}</td>
                        <td>{{ row.time|date("MMMM Do YYYY, h:mm:ss a") }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <nav>
            <ul class="pager">
                {% if page == 1 %}
                    <li class="previous disabled">
                        <a href="#"><span aria-hidden="true">&larr;</span> Newer</a>
                    </li>
                {% else %}
                    <li class="previous">
                        <a href="/admin/playlist/page/{{ page - 1 }}"><span aria-hidden="true">&larr;</span> Newer</a>
                    </li>
                {% endif %}
                {% if page == pages %}
                    <li class="next disabled">
                        <a href="#">Older <span aria-hidden="true">&rarr;</span></a>
                    </li>
                {% else %}
                    <li class="next">
                        <a href="/admin/playlist/page/{{ page + 1 }}">Older <span aria-hidden="true">&rarr;</span></a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endblock %}