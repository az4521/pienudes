{% extends "layout.html.twig" %}
{% block content %}
    <div class="col-md-8 col-md-offset-2">
        {% if pageSuccess %}
            <div class="alert alert-success" role="alert">{{ pageSuccess }}</div>
        {% endif %}
        {% if pageError %}
            <div class="alert alert-danger" role="alert">{{ pageError }}</div>
        {% endif %}
        
        <h1>DMCA</h1>
        
