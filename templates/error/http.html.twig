{% extends "layout.html.twig" %}
{% block content %}
    <div class="col-md-12">
        <div class="alert alert-danger">
            {% if status == 404 %}
                <h1>Not Found</h1>
                <p>
                    The page you were looking for doesn't seem to exist.
                    Please check that you typed the URL correctly.
                    {% if message %}
                        <strong>Reason: {{ message }}</strong>
                    {% endif %}
                </p>
            {% elif status == 403 %}
                <h1>Forbidden</h1>
                <p>
                    You don't have permission to access <code>{{ path }}</code>
                </p>
            {% elif status == 500 %}
                <h1>Oops</h1>
                <p>
                    Something went wrong. Please try again in a minute.
                </p>
            {% else %}
                <h1>Oops</h1>
                <p>
                    Your request could not be processed.
                    Status code: <code>{{ status }}</code>, message: <code>{{ message }}</code>
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}