{% import "macros/links.html.twig" as links %}

{% extends "layout.html.twig" %}
{% block content %}
    <div id="users-list">
        {% for user in users %}
            <div class="col-xs-12 col-sm-6 col-md-3 profile-info inline">
                {# avatar #}
                <a href="/user/{{ user.name }}" class="profile-avatar-wrap margin-remove">
                    {% if user.profile.image %}
                        <img src="{{ user.profile.image }}" class="profile-avatar" />
                    {% else %}
                        <img src="/img/avatar.gif" class="profile-avatar" />
                    {% endif %}
                </a>
    
                <div>
                    {# name #}
                    <h1 class="profile-name">
                        {{ user.name }}
                    </h1>
    
                    {# tagline #}
                    <p class="profile-tagline">{{ user.profile.text }}</p>
                    
                    {# count #}
                    <a class="profile-play-count">{{ user.cnt|comma }} {% if user.cnt == 1 %}play{% else %}plays{% endif %}</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}