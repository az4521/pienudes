{% if user.profile.header %}
    {% set style = "background-image: url(" + user.profile.header + "); background-color: " + user.profile.color + ";" %}
{% else %}
    {% set style = "background-image: none; background-color: " + user.profile.color + ";" %}
{% endif %}

<div id="profile-header" style="{{ style }}">
    {% if loggedIn and loginName == user.name %}
        <div id="profile-header-edit" style="display: none;">
            <span id="profile-header-edit-icon" class="glyphicon glyphicon-picture">
                <img src="/img/spinner.gif" id="profile-header-edit-spinner" class="profile-ajax-spinner" style="display: none" />
            </span>
            <div class="btn-group">
                <button id="profile-header-edit-upload-btn" class="btn btn-default btn-sm">Upload</button>
                <button id="profile-header-edit-remove-btn" class="btn btn-default btn-sm">Remove</button>
            </div>
            <input id="profile-header-edit-color" type="color" />
            <form id="profile-header-edit-form" enctype="multipart/form-data" style="width: 0; height: 0;">
                <input id="profile-header-edit-file" type="file" name="header" style="width: 0; height: 0;" />
            </form>
        </div>
    {% endif %}
</div>